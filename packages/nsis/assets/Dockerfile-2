FROM ubuntu:24.04

RUN apt-get update && DEBIAN_FRONTEND=noninteractive apt-get install -y \
  git python3 python3-pip scons curl unzip make g++ zlib1g-dev \
  && apt-get clean


# ---------------------------
# Build makensis for Linux
# ---------------------------
WORKDIR /build
RUN git clone --branch v311 --depth 1 https://github.com/kichik/nsis.git /build/nsis-src

WORKDIR /build/nsis-src
RUN scons NSIS_CONFIG_CONST_DATA_PATH=no SKIPSTUBS=all SKIPPLUGINS=all MAKENSIS_ONLY=1 SKIPUTILS=all
# RUN mkdir -p /out/linux && \
#   cp build/urelease/makensis /out/linux/makensis

